<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - It's Only You</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="Ludum Dare 33 competition entry: You Are the Monster" />
</head>
<body>
    <div class="wrapper">
        <div class="header">
            It's Only You
        </div>
        <div class="body">
            @RenderBody()
        </div>
        <div class="footer">
            &copy; @DateTime.Now.Year - <a href="http://darchuk.net">Robert P. Darchuk</a>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")    
    @RenderSection("scripts", required: false)
</body>
</html>