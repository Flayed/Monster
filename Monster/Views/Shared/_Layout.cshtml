<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - You are the Monster</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="wrapper">
        <div class="header">
            You are the Monster
        </div>
        <div class="body">
            @RenderBody()
        </div>
        <div class="footer">
            &copy; @DateTime.Now.Year - <a href="http://darchuk.net">Robert P. Darchuk</a>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")    
    @RenderSection("scripts", required: false)
</body>
</html>